{
  "name": "@sailorskills/shared",
  "version": "0.1.0",
  "type": "module",
  "description": "Sailor Skills Shared - Common utilities and components for all products",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    "./auth": "./src/auth/index.js",
    "./components/*": "./src/components/*.js",
    "./utils/*": "./src/utils/*.js"
  },
  "scripts": {
    "build": "echo 'No build needed - serving static files from dist/'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:playwright": "npx playwright test",
    "test:smart-billing": "npx playwright test tests/smart-billing-flow.spec.js",
    "lint": "eslint src/",
    "prepublishOnly": "echo 'Build skipped'",
    "predeploy": "node check-production-ready.js",
    "verify-db": "node verify-migrations.js",
    "check-security": "node check-production-ready.js"
  },
  "keywords": [
    "sailorskills",
    "shared",
    "utilities",
    "components"
  ],
  "author": "Sailor Skills",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@supabase/supabase-js": "^2.80.0",
    "dotenv": "^17.2.3",
    "resend": "^6.1.2",
    "stripe": "^14.25.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "jsdom": "^27.0.1",
    "rollup": "^4.0.0",
    "vitest": "^4.0.4"
  }
}
